                    <flag name="MISC:ENVIRONMENT" bit-off="23"></flag>
                    <anim target="location"><bool name="light-1" value="true" /></anim>
                    <sfx clip="switch" />
                </then>
                <else>
                    <flag name="MISC:ENVIRONMENT" bit-on="23"></flag>
